<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#66CCFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.parent_digitalleash.MainActivity" >

    <TextView
        android:id="@+id/titleLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/usernameEditTextField"
        android:text="Digital Leash Parent App - Android"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
		android:layout_centerInParent="true"
        android:layout_below="@+id/titleLabelView"
        android:layout_above="@+id/usernameEditTextField"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/koala" />
        
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmationTextView"
        android:layout_marginBottom="28dp"
        android:layout_toLeftOf="@+id/usernameEditTextField"
        android:text="Username"
        android:textColor="@color/red"
        android:textSize="25sp"
        android:textStyle="bold|italic" />
    
    <EditText
        android:id="@+id/usernameEditTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/usernameTextView"
        android:layout_alignBottom="@+id/usernameTextView"
        android:layout_alignLeft="@+id/confirmationTextView"
        android:layout_marginLeft="23dp"
        android:ems="10" />

    <Button
        android:id="@+id/createNewUserbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkLocationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="Create New User" />

    <TextView
        android:id="@+id/confirmationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/createNewUserbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Confirmation" 
        android:textColor="@color/blue"
        android:textColorHighlight="@color/red"
        />

    <Button
        android:id="@+id/checkLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Check Location" />

    <EditText
        android:id="@+id/latitudeEditTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/latitudeTextView"
        android:layout_alignBottom="@+id/latitudeTextView"
        android:layout_alignLeft="@+id/confirmationTextView"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/radiusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitudeTextView"
        android:layout_marginTop="36dp"
        android:layout_toLeftOf="@+id/checkLocationButton"
        android:text="Radius" />

    <EditText
        android:id="@+id/radiusEditTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radiusTextView"
        android:layout_alignLeft="@+id/longitudeEditTextField"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/longitudeEditTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/latitudeEditTextField"
        android:layout_below="@+id/latitudeEditTextField"
        android:layout_marginTop="20dp"
        android:ems="10" />

    <TextView
        android:id="@+id/latitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkLocationButton"
        android:layout_marginTop="58dp"
        android:layout_toLeftOf="@+id/checkLocationButton"
        android:text="Latitude" />

    <TextView
        android:id="@+id/longitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/longitudeEditTextField"
        android:layout_alignLeft="@+id/latitudeTextView"
        android:text="Longitude" />






</RelativeLayout>
